@using TicketingSystem.Web.Models.Tickets;

@model CreateTicketRequest

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form enctype="multipart/form-data" method="post">
            <div class="mb-3">
                <input type="hidden" asp-for="@Model.Project" />
                <h4 class="form-label text-center">Make ticket for: @Model.Project?.Name</h4>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label">Title</label>
                <input type="text" asp-for="@Model.Title" class="form-control" aria-required="true" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label">Description</label>
                <input type="text" asp-for="@Model.Description" class="form-control" aria-required="true" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Type</label><br />
                <select asp-for="@Model.Type">
                    @foreach (var type in Model.Types)
                    {
                        <option value="@type"> @type</option>
                    }
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" asp-controller="Ticket" asp-action="Create" asp-route-projectId="@Model.ProjectId" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>